  <script>
    // Accordion JS (mobile only)
    document.querySelectorAll('.wr-bhavya-accordion-header').forEach(header => {
      header.addEventListener('click', () => {
        // close others
        document.querySelectorAll('.wr-bhavya-accordion-header').forEach(h => {
          if (h !== header) {
            h.classList.remove('wr-bhavya-active');
            h.nextElementSibling.style.display = 'none';
          }
        });

        // toggle current
        header.classList.toggle('wr-bhavya-active');
        const body = header.nextElementSibling;
        if (header.classList.contains('wr-bhavya-active')) {
          body.style.display = 'block';
        } else {
          body.style.display = 'none';
        }
      });
    });
  </script>
