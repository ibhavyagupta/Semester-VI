  <script>
    // Accordion only for mobile
    const cards = document.querySelectorAll('.wr-bhavya-card h3');
    cards.forEach(header => {
      header.addEventListener('click', () => {
        if (window.innerWidth <= 767) {
          header.parentElement.classList.toggle('active');
        }
      });
    });
