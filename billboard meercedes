                <!-- Screen reader announcements -->
                <div aria-live="polite" aria-atomic="true" class="sr-only" id="tab-announcements"></div>
              </div>

              <script>
                const productsTab = document.getElementById("productsTab");
                const supportTab = document.getElementById("supportTab");
                const productsContent =
                  document.getElementById("productsContent");
                const supportContent =
                  document.getElementById("supportContent");

                function switchTab(
                  activeTab,
                  activeContent,
                  inactiveTab,
                  inactiveContent
                ) {
                  if (activeTab.classList.contains("switching")) return;

                  activeTab.classList.add("switching");
                  inactiveTab.classList.add("switching");

                  // Update tab states
                  activeTab.classList.add("active");
                  inactiveTab.classList.remove("active");

                  inactiveContent.classList.add("fade-out");

                  setTimeout(() => {
                    inactiveContent.classList.remove("active", "fade-out");
                    activeContent.classList.add("active");

                    // Start fade in animation for active content
                    setTimeout(() => {
                      activeContent.classList.add("fade-in");
                      const allCards =
                        document.querySelectorAll(".wr-ptql-card");
                      allCards.forEach((card) => {
                        card.classList.remove("active");
                        // Reset max-height for smooth transitions
                        const links = card.querySelector(".wr-ptql-links");
                        if (links) {
                          links.style.maxHeight = "";
                        }
                      });

                      // Remove switching state and fade classes after animation
                      setTimeout(() => {
                        activeTab.classList.remove("switching");
                        inactiveTab.classList.remove("switching");
                        activeContent.classList.remove("fade-in");
                      }, 300);
                    }, 50);
                  }, 300);
                }

                productsTab.addEventListener("click", () => {
                  if (!productsTab.classList.contains("active")) {
                    switchTab(
                      productsTab,
                      productsContent,
                      supportTab,
                      supportContent
                    );
                  }
                });

                supportTab.addEventListener("click", () => {
                  if (!supportTab.classList.contains("active")) {
                    switchTab(
                      supportTab,
                      supportContent,
                      productsTab,
                      productsContent
                    );
                  }
                });

                // Independent accordion functionality for mobile with smooth slide transitions
                const cards = document.querySelectorAll(".wr-ptql-card h2");
                cards.forEach((header) => {
                  header.addEventListener("click", () => {
                    if (window.innerWidth <= 767) {
                      const card = header.parentElement;
                      const links = card.querySelector(".wr-ptql-links");
                      const isCurrentlyActive =
                        card.classList.contains("active");

                      // Toggle only the current card (independent behavior)
                      if (isCurrentlyActive) {
                        // Closing the card
                        card.classList.remove("active");
                        links.style.maxHeight = "0px";
                      } else {
                        // Opening the card
                        card.classList.add("active");

                        // Calculate the actual height needed
                        const scrollHeight = links.scrollHeight;
                        links.style.maxHeight = scrollHeight + "px";

                        // After transition completes, set to auto for dynamic content
                        setTimeout(() => {
                          if (card.classList.contains("active")) {
                            links.style.maxHeight = "auto";
                          }
                        }, 400); // Match the CSS transition duration
                      }
                    }
                  });
                });

                // Recalculate heights on window resize
                window.addEventListener("resize", () => {
                  if (window.innerWidth > 767) {
                    // Reset mobile styles when switching to desktop
                    const allCards =
                      document.querySelectorAll(".wr-ptql-card");
                    allCards.forEach((card) => {
                      card.classList.remove("active");
                      const links = card.querySelector(".wr-ptql-links");
                      if (links) {
                        links.style.maxHeight = "";
                      }
                    });
                  } else {
                    // Recalculate heights for mobile when resizing
                    const activeCards = document.querySelectorAll(
                      ".wr-ptql-card.active"
                    );
                    activeCards.forEach((card) => {
                      const links = card.querySelector(".wr-ptql-links");
                      if (links) {
                        const scrollHeight = links.scrollHeight;
                        links.style.maxHeight = scrollHeight + "px";
                      }
                    });
                  }
                });

                // Handle orientation change on mobile devices
                window.addEventListener("orientationchange", () => {
                  setTimeout(() => {
                    if (window.innerWidth <= 767) {
                      const activeCards = document.querySelectorAll(
                        ".wr-ptql-card.active"
                      );
                      activeCards.forEach((card) => {
                        const links = card.querySelector(".wr-ptql-links");
                        if (links) {
                          const scrollHeight = links.scrollHeight;
                          links.style.maxHeight = scrollHeight + "px";
                        }
                      });
                    }
                  }, 100); // Small delay to ensure orientation change is complete
                });
              </script>
            </section>
            <!-- prototyping code ends -->
