<script>
(function(){
  const totalCards = document.querySelectorAll('.wr-card').length;
  const countEl = document.getElementById('wr-count');
  const results = document.getElementById('results');
  const filterButtons = Array.from(document.querySelectorAll('.wr-filter-btn'));
  let activeFilter = 'all';

  // initialize - set All active
  function setActiveButtonByFilter(f) {
    filterButtons.forEach(btn => {
      const isActive = (btn.dataset.filter === f);
      btn.classList.toggle('active', isActive);
      btn.setAttribute('aria-pressed', isActive ? 'true' : 'false');
    });
  }

  setActiveButtonByFilter('all');
  countEl.textContent = `Showing ${totalCards} of ${totalCards} credit cards`;

  function showFiltered(filter) {
    const cards = Array.from(document.querySelectorAll('.wr-card'));
    if (filter === 'all') {
      cards.forEach(c => c.style.display = '');
      countEl.textContent = `Showing ${totalCards} of ${totalCards} credit cards`;
      activeFilter = 'all';
      setActiveButtonByFilter('all');
      return;
    }

    const matching = cards.filter(c => {
      const cats = c.dataset.categories.split(',');
      return cats.includes(filter);
    });

    // show/hide
    cards.forEach(c => c.style.display = 'none');
    matching.forEach(c => c.style.display = '');

    countEl.textContent = `Showing ${matching.length} of ${totalCards} credit cards`;
    activeFilter = filter;
    setActiveButtonByFilter(filter);
  }

  // click handling
  filterButtons.forEach(btn => {
    btn.addEventListener('click', (e) => {
      const filter = btn.dataset.filter;
      // toggle behavior: if clicked same as active -> reset to all
      if (filter === activeFilter || (filter === 'all' && activeFilter === 'all')) {
        // if clicked All while All active -> nothing (keep)
        if (filter === 'all' && activeFilter === 'all') {
          showFiltered('all');
          return;
        }
        // otherwise, unselect -> show all
        showFiltered('all');
      } else {
        // select the clicked filter
        showFiltered(filter);
      }

      // accessibility: ensure keyboard focus remains visible
      btn.focus();

      // mobile behaviour: when a filter (not all) is selected, scroll to results
      if (window.matchMedia('(max-width:767px)').matches) {
        // only scroll when a specific filter selected (not 'all')
        if (activeFilter !== 'all') {
          // animate scroll
          results.scrollIntoView({behavior:'smooth', block:'start'});
        }
      }
    });
  });

  // Keyboard support: allow Enter/Space on focused buttons (native already handles button)
  // Add small console debugging hook if dev needs to trace
  window.__wr_debug_filters = {
    getActive: () => activeFilter,
    setFilter: (f) => showFiltered(f)
  };

})();
</script>
</body>
</html>
